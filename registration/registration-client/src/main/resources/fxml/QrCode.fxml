<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="600.0" prefWidth="600.0"
          xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="io.mosip.registration.controller.QrCodePopUpViewController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="15" />
        <RowConstraints percentHeight="85" />
    </rowConstraints>
    <children>
        <GridPane GridPane.rowIndex="0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="40.0" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="60.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
            </rowConstraints>
            <children>
                <Label text="Select Device" GridPane.columnIndex="0" />
                <ComboBox fx:id="availableWebcams" minHeight="30.0"
                          minWidth="190.0" prefHeight="26.0" prefWidth="246.0"
                          styleClass="loginCombobox" GridPane.columnIndex="1" />
            </children>
            <GridPane.margin>
                <Insets bottom="30.0" left="10.0" right="10.0" top="30.0"
                />
            </GridPane.margin>
        </GridPane>
        <GridPane fx:id="captureWindow" prefHeight="290.0"
                  prefWidth="401.0" GridPane.rowIndex="1" />
    </children>
</GridPane>